public class TemperatureConverter {
    public static Decimal celsiusToFahrenheit(Decimal c) {
        return (c * 9/5) + 32;
    }
    public static Decimal fahrenheitToCelsius(Decimal f) {
        return (f - 32) * 5/9;
    }
}

//System.debug(TemperatureConverter.celsiusToFahrenheit(25.0));
//System.debug(TemperatureConverter.fahrenheitToCelsius(77.0));
